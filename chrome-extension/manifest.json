{
    "manifest_version": 3,
    "name": "ResumeGPT",
    "version": "1.0.0",
    "description": "Automatically tailor your resume to job descriptions",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.monster.com/*",
        "https://*.careerbuilder.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "https://*.linkedin.com/jobs/*",
            "https://*.indeed.com/viewjob*",
            "https://*.glassdoor.com/job-listing/*",
            "https://*.monster.com/job/*",
            "https://*.careerbuilder.com/job/*"
        ],
        "js": ["contentScript.js"]
    }],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
} 